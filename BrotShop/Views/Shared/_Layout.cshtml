                        <button class="navbar-toggler navbar-toggler-right btn g-line-height-1 g-brd-none g-pa-0 g-pos-abs g-top-minus-3 g-right-0" type="button" aria-label="Toggle navigation" aria-expanded="false" aria-controls="navBar" data-toggle="collapse" data-target="#navBar">
                            <span class="hamburger hamburger--slider">
                                <span class="hamburger-box">
                                    <span class="hamburger-inner"></span>
                                </span>
                            </span>
                        </button>
                        <!-- End Responsive Toggle Button -->
                        <!-- Logo -->
                        <a asp-controller="Home" asp-action="Index" class="navbar-brand d-flex">Brot's Goodie Shop</a>
                        <!-- End Logo -->
                        <!-- Navigation -->
                        <div class="collapse navbar-collapse align-items-center flex-sm-row g-pt-10 g-pt-5--lg g-mr-40--lg" id="navBar">
                            <ul class="navbar-nav text-uppercase g-pos-rel g-font-weight-600 ml-auto">

                                <li class="nav-item  g-mx-10--lg g-mx-15--xl">
                                    <a asp-controller="Home" asp-action="Goodies" class="nav-link g-py-7 g-px-0">Goodies</a>
                                </li>
                                <li class="nav-item  g-mx-10--lg g-mx-15--xl">
                                    <a asp-controller="Feedback" asp-action="Index" class="nav-link g-py-7 g-px-0">Feedback</a>
                                </li>



                            </ul>
                        </div>

                        @if (SignInManager.IsSignedIn(User))
                        {
                            <form asp-area="" asp-controller="Account" asp-action="Logout" id="logoutForm"
                                  method="post" class="navbar-right">
                                <div class="d-inline-block g-hidden-md-down g-pos-rel g-valign-middle g-pl-30 g-pl-0--lg">
                                    <a class="btn u-btn-outline-primary g-font-size-13 text-uppercase g-py-10 g-px-15"
                                       href="javascript:document.getElementById('logoutForm').submit()">Log off</a>
                                </div>

                            </form>
                        }
                        else
                        {
                            <div class="d-inline-block g-hidden-md-down g-pos-rel g-valign-middle g-pl-30 g-pl-0--lg">
                                <a id="registerLink" asp-controller="Account" asp-action="Register" class="btn u-btn-outline-primary g-font-size-13 text-uppercase g-py-10 g-px-15">Register</a>
                            </div>
                            <div>&nbsp;&nbsp;&nbsp;</div>
                            <div class="d-inline-block g-hidden-md-down g-pos-rel g-valign-middle g-pl-30 g-pl-0--lg">
                                <a id="registerLink" asp-controller="Account" asp-action="Login" class="btn u-btn-outline-primary g-font-size-13 text-uppercase g-py-10 g-px-15">Login</a>
                            </div>

                        }

                        <!-- End Navigation -->

                    </div>
                </nav>
            </div>
