@model HomeViewModel

@{
    ViewData["Title"] = Model.Title;
}

<h2>@Model.Title</h2>

@foreach (var goodie in Model.Goodies)
{
    <div class="col-sm-4 col-lg-4 col-md-4">
        <div class="thumbnail">
            <img src="@goodie.ImageThumbnailUrl" alt="">
            <div class="caption">
                <h3 class="pull-right">@goodie.Price.ToString("c")</h3>
                <h3>
                    <a asp-controller="Home" asp-action="Details" asp-route-id="@goodie.Id">@goodie.Name</a>
                </h3>
                <p>@goodie.ShortDescription</p>
            </div>
        </div>
    </div>
}

