@model Goodie

@{
    ViewBag.Title = Model.Name;
}

<section class="container g-py-100">

    <!-- Product Blocks -->
    <div class="row">
        <div class="col-lg-12 g-mb-30">
            <!-- Article -->
            <article class="u-block-hover">
                <!-- Article Image -->
                <div class="rounded">
                    <img class="w-100 u-block-hover__main--zoom-v1" alt="@Model.Name" src="@Model.ImageUrl">
                </div>
                <!-- End Article Image -->
                <!-- Article Content -->
                <div class="g-pos-abs g-bottom-20 g-left-20">
                    <div class="g-width-600 text-center">
                        <header class="g-bg-primary g-rounded-top-5 g-pa-15">
                            <div class="g-pos-rel g-z-index-2">
                                <h3 class="h5 g-color-white">@Model.Name</h3>
                                <em class="d-inline-block g-color-white g-font-style-normal g-font-size-12 mb-1">@Model.LongDescription</em>
                            </div>
                        </header>

                        <footer class="g-color-main g-bg-white g-font-weight-600 g-font-size-18 g-rounded-bottom-5 g-pa-7">
                            Only
                            <span class="g-color-primary">@Model.Price</span>
                        </footer>
                    </div>
                </div>
                <!-- End Article Content -->

                <a class="u-link-v2" href="#!"></a>
            </article>
            <!-- End Article -->
        </div>

    </div>
    <!-- End Product Blocks -->

</section>